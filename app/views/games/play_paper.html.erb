
<body>

  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="js/bootstrap.min.js"></script>

  <div class="container">

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class ="btn-group btn-group-justified">
          <a href="/" class="btn btn-block btn-primary"> How to play </a>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class ="btn-group btn-group-justified">
          <a href="http://localhost:3000/rock" class="btn btn-block btn-primary"> Play rock </a>
          <a href="/paper" class="btn btn-block btn-primary"> Play paper </a>
          <a href="/scissors" class="btn btn-block btn-primary"> Play scissors </a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-2 text-center">
        <h2> You played paper</h2>
        <div class="text-center">
          <i class="fa fa-hand-paper-o fa-5x"></i>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <h2>
          The computer played <%= @computer_move  %>
        </h2>
        <div class="text-center">
          <i class="fa <%= @computer_icon  %> fa-5x"></i>
        </div>
      </div>
    </div>

    <hr>
    <div class="text-center">
      <h1>
        <strong>
          You <%= @outcome %>!
        </strong>
      </h1>
    </div>
  </div>

</body>
</html>
